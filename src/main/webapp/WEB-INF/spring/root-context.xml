<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- HikariCP DataSource -->
	<bean id="dataSource" class="com.zaxxer.hikari.HikariDataSource">
	    <property name="driverClassName" value="org.mariadb.jdbc.Driver"/>
	    <property name="jdbcUrl" value="jdbc:mariadb://13.209.73.59:3306/vroom"/>
	    <property name="username" value="testuser"/>
	    <property name="password" value="test1234"/>
	
	    <!-- 옵션 (없어도 동작) -->
	    <property name="maximumPoolSize" value="10"/>
	    <property name="minimumIdle" value="2"/>
	</bean>

    <!-- MyBatis SqlSessionFactory -->
    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <!-- 이미 HikariCP로 등록된 dataSource를 그대로 사용 -->
        <property name="dataSource" ref="dataSource"/>
        <!-- Mapper XML 위치 -->
        <property name="mapperLocations" value="classpath*:/com/gorani/vroom/**/*.xml"/>
    </bean>

    <!-- Mapper 인터페이스 자동 스캔 -->
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.gorani"/>
    	<property name="annotationClass" value="org.apache.ibatis.annotations.Mapper"/>
    </bean>

</beans>
